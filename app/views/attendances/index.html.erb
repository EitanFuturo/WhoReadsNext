<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Meeting</th>
      <th>Attended</th>
      <th>Had text</th>
      <th>Read text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.student_id %></td>
        <td><%= attendance.meeting_id %></td>
        <td><%= attendance.attended %></td>
        <td><%= attendance.had_text %></td>
        <td><%= attendance.read_text %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
